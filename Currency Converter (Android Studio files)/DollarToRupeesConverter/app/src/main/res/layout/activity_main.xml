<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mymobileworldapps.dollartorupeesconverter.MainActivity">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="518dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="-4dp"
        tools:layout_editor_absoluteX="7dp">

        <EditText
            android:id="@+id/myInputValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter Amount in Dollar"
            android:inputType="number"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="convertToRupees"
            android:text="Convert In to Rupees"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="76dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:srcCompat="@drawable/testimage"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="280dp"
            android:layout_weight="5.91" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
